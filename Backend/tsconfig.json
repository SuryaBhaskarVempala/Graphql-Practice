{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./build",

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "strict": true,
    "skipLibCheck": true,

    "noEmit": false
  },
  "include": ["src"]
}
